<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF2FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formulaire d'inscription"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:layout_marginBottom="28dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name "
            android:textSize="13sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/fieldFullName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="ex : nini_user"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textSize="15sp"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#3F51B5"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse e-mail "
            android:textSize="13sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/fieldEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="ex : nini@email.com"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textSize="15sp"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#3F51B5"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:textSize="13sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/fieldPhone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="ex : 06 12 34 56 78"
            android:inputType="phone"
            android:padding="14dp"
            android:textSize="15sp"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#3F51B5"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="13sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/fieldStreet"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="ex : mhamid 9"
            android:inputType="textPostalAddress"
            android:padding="14dp"
            android:textSize="15sp"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#3F51B5"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="13sp"
            android:textColor="#3F51B5"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/fieldCity"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="ex : casablanca"
            android:inputType="textCapWords"
            android:padding="14dp"
            android:textSize="15sp"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#3F51B5"
            android:layout_marginBottom="28dp"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Send ðŸ‘Œ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#3F51B5"/>

    </LinearLayout>
</ScrollView>